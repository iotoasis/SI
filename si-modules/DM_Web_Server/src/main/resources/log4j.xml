<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!-- Appenders -->
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%p][%d{yyyy-MM-dd HH:mm:ss}][%c{1}] %m %n"/> 
		</layout>
	</appender>
	
	<appender name="sql" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="file" value="/usr/local/hdm/tomcat/logs/sql" />
		<param name="Append" value="true"/>
		<param name="Encoding" value="UTF-8"/>
		<param name="DatePattern" value="'.'yyyy-MM-dd"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d{yyyy-MM-dd HH:mm:ss}][%p][%c{1}] %m %n"/> 
		</layout>
	</appender>
	
	<!-- Application Loggers -->
	<logger name="net.herit.business">
		<level value="info" />
	</logger>
	
	<!-- 3rdparty Loggers -->
	<logger name="org.springframework">
		<level value="info" />
	</logger>
	
	<logger name="com.ibatis" additivity="true">
		<level value="debug" />
		<appender-ref ref="console" />
		<appender-ref ref="sql" />
	</logger>
	
	<logger name="java.sql" additivity="true">
		<level value="debug" />
		<appender-ref ref="console" />
		<appender-ref ref="sql" />
	</logger>

	<!-- Root Logger -->
	<root>
		<level value="info" />
		<appender-ref ref="console" />
		<appender-ref ref="sql" />
	</root>
	
</log4j:configuration>
