					<execution>
						<id>IN-CSE</id>
						<goals>
							<goal>jar</goal>
						</goals>
						<phase>package</phase>
						<configuration>
							<finalName>OneM2M</finalName>
							<classifier>IN-CSE</classifier>
							<source>1.7</source>
							<target>1.7</target>
							<encoding>UTF-8</encoding>
							<archive>
								<manifest>
									<addClasspath>true</addClasspath>
									<mainClass>net.herit.iot.onem2m.incse.InCse</mainClass>
									<classpathPrefix>libs/</classpathPrefix>
								</manifest>
							</archive>
							<includes>
